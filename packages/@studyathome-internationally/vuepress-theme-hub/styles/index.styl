@require "./course.styl"
@require "./lecturer.styl"
@require "./note.styl"
@require "./post-it.styl"

// temporary workaround for @vuepress/theme-default
// introduced with v1.4.1 (https://github.com/vuejs/vuepress/commit/430b9177deaa518c4f6034589459ddff0e9db033)
.dropdown-wrapper .dropdown-title
  pointer-events auto !important

.hide-on-mobile
  display none
@media (max-width: $MQMobile)
  .hide-on-mobile
    display unset
  .hide-on-desktop
    display none

:focus, a:focus
  outline 3px solid $accentColor !important
  outline-offset 0.1rem !important

:not(.grid-item) > a
  color lighten($accentColor,29.25%)
.nav-links a, .dropdown-wrapper .dropdown-title, a.sidebar-link
  color $accentColor

@media (max-width: $MQMobile)
  .home .hero p.description
    font-size 18pt

.courses-overview
  .theme-default-content
    max-width 1040px

.select
  cursor pointer
  select
    margin-block-start 0.5rem
    margin-block-end 0.5rem
    appearance none
    font-size 1rem
    font-weight 600
    padding .75rem 1.25rem
    border-radius .25rem
    color $textColor
    background-color alpha($borderColor,40%)
    border-color darken($borderColor,40%)
    box-shadow 1px 1px 4px -1px alpha($borderColor,80%)
    margin-right -2rem
  .icon
    width 1rem
    position absolute
    margin-top 1.3rem

details.hub
  margin-block-start 0.5rem
  margin-block-end 0.5rem
  display block
  padding .75rem 1rem
  border-radius .25rem
  background-color alpha($accentColor,20%)
  border 1px solid $accentColor
  summary
    list-style none
    font-weight 600
    cursor pointer
    flex-flow row nowrap
    &::-webkit-details-marker
      display none
    span
      display inline-block
      margin-right -1rem
      width 100%
    .marker
      position absolute
      width 1rem


.sw-update-popup
  border 2px solid #0f303e !important

.sw-update-popup > button
  border none !important
  font-family -apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Oxygen,Ubuntu,Cantarell,Fira Sans,Droid Sans,Helvetica Neue,sans-serif !important
  -webkit-font-smoothing antialiased !important
  text-align center !important
  line-height 1.2 !important
  font-weight 500 !important
  text-decoration none !important
  display inline-block !important
  font-size 1.1rem !important
  color #fff !important
  background-color #0f303e !important
  padding .8rem 1.6rem !important
  border-radius 4px !important
  transition background-color .1s ease !important
  box-sizing border-box !important
  border-bottom 1px solid #0d2b38 !important

div.full-width-image img
  width 100%

div.image-triplet, div.image-triplet p
  display flex
  justify-content space-between
  margin 1rem 0
  & img
    width 32%

div.centered-image
  display flex
  justify-content center