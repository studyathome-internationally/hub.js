$courseContentWidth = $courseContentWidth + $courseSidebarWidth

h1, h2, h3, h4, h5, h6
  .content__default > &, .course-sidebar > section > &, .course-sidebar > section > .preview > .excerpt > &, .course-description > .information > .content__information > &
    margin-top (0.5rem - $navbarHeight)
    padding-top ($navbarHeight + 1rem)
    margin-bottom 0

    &:first-child
      + p, + pre, + .custom-block
        margin-top 2rem

.cover-image-contain .media.figure
  img
    object-fit contain !important

.page.course
  background-color alpha($accentColor,100%)

  .course-title
    color white
    padding 2rem 3rem
    max-width $courseContentWidth
    margin auto

    h1
      margin-bottom 0.5rem
      border-bottom 1px solid white

    .lecturers
      display flex
      flex-flow row wrap
    
      span
        font-size 1.4rem
        line-height 1.6
        flex 1 1 50%

        &:nth-child(2n)
          text-align right

  & > .container
    max-width $courseContentWidth
    margin auto
    padding 2rem

    .course-description, .content__default, .course-sidebar
      border 1px solid $borderColor
      border-radius 5px
      box-shadow 1px 1px 4px 1px darken($borderColor,25%)
      padding 2.5rem 2rem
      background-color white

    .course-description
      display flex
      margin-bottom 2rem
      padding 1rem
      p
        text-align justify
      div
        flex 1 1 50%
      .media:not(.figure)
        .container
          // padding unset !important
          position relative
          width 100%
          height 0
          padding-bottom 56.27198%
      .media.figure
        margin auto
        img
          max-height 500px
          object-fit cover

      .information
        padding 0
        padding-left 1rem

        .hard-facts
          line-height 2
      
      .icon
        width 2rem

    .contents
      display flex
      flex-flow row nowrap
      .content__default
        width $courseContentWidth
        margin-right 2rem
        h1
          display none
      .course-sidebar
        width $courseSidebarWidth

        section.enrollment p, .preview
          text-align justify

        section.university
          .excerpt h1
            font-size 1rem
            text-overflow ellipsis
            display block
            overflow hidden
            white-space nowrap
            max-width "calc(%s - 8rem)" % $courseSidebarWidth
            margin-bottom 0.5rem
        section.lecturers
          .lecturer
            margin 1rem 0

            .title
              font-weight 600
              margin-bottom 0.5rem

            .portrait
              width 40%
              padding-top 0.75rem

            .excerpt h1
              display none

        .excerpt
          &, & > *
            display inline

    .action button
      cursor pointer
      display block
      width 100%
      border none 
      border-radius 5px
      padding 0.5rem 1rem
      margin-top 0.9rem
      font-size 1rem
      box-shadow 1px 1px 3px 1px darken($accentColor,40%)
      background-color $accentColor
      color white

  & > .page-edit
    max-width $courseContentWidth
    & .edit-link a
      color darken($borderColor,10%)

  &.mobile
    .course-title
      padding 2rem 2rem 0 2rem

      // .lecturers
      //   span
      //     font-size 1.2rem
      //     flex 1 1 100%
      //     &:nth-child(2n)
      //       text-align left

    .container
      padding unset

      .course-description, .content__default, .course-sidebar
        border unset
        border-radius unset
        box-shadow unset
        padding 2.5rem 2rem
        
        .information
          padding unset
      
      .course-description
        flex-flow column nowrap
        margin 2rem
        .media
          flex 1 1 70%
          margin 0
          
          .container
            position unset
            height 32vw
            width 100%
            padding-bottom unset

            .player
              width inherit 
              height inherit

      .contents
        flex-flow column nowrap

        .content__default
          margin-right unset
          padding-bottom 0

        .content__default, .course-sidebar
          width unset

        .course-sidebar
          padding-top 0

          section.enrollment p, .preview
            text-align unset

          section.university
            .excerpt h1
              max-width unset

          section.lecturers
            // .container
            //   .lecturer:not(:first-child)
            //     border-top 1px solid $borderColor
            //     padding-top 1rem
                // background-color red
                // overflow auto
            
            .lecturer
              overflow auto
              .portrait
                max-width 20%
